using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Owner
{
    class Program
    {
        private static int choice;
        private static bool running = false;

        static void Main(string[] args)
        {
            do
            {
          
                displayMenue();
                displayHint();
                try
                {
                    choice = Convert.ToInt32(Console.ReadLine());
                }
                catch (Exception e)
                {
                    Console.WriteLine(e.Message);
                    Console.WriteLine();
                    Console.WriteLine();
                    Console.WriteLine();
                    continue;
                }
                    switch (choice) {
                    case 1:running = true;
                        break;

                    case 2:
                        running = true;
                        break;

                    case 3:
                        running = true;
                        break;

                    case 4: quit();
                       
                        break;

                    default:Console.WriteLine("The option is not available! Please enter another option(1 to 4):");
                        Console.WriteLine();
                        Console.WriteLine();
                        Console.WriteLine();
                        running = false;
                        break;
                }

            } while (!running);
        }

        static void displayMenue()
        {
            Console.WriteLine("Welcome to Marvellous Magic");
            Console.WriteLine("=================================");
            Console.WriteLine("\t\t 1. Owner");
            Console.WriteLine("\t\t 2. Franchise Owner");
            Console.WriteLine("\t\t 3. Customer");
            Console.WriteLine("\t\t 4. Quit");
        }

        static void displayHint()
        {

            Console.WriteLine("Enter an option:");
            Console.WriteLine("(where the user enters a number from 1 to 4, to select an option)");
        }

        static void quit()
        {
            Environment.Exit(0);
        }
    }
}
