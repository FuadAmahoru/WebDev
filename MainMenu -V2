using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Assignment1
{
    class Driver
    
    {
        private static int choice;
       // private static bool running = false;

        static void Main(string[] args)
        {
           // Driver driver = new Driver();
           displayMainMenu();
          
        }

       static void displayMainMenu()
        {
            do
            {

                displayMenue();
                displayHint();
                try
                {
                    choice = Convert.ToInt32(Console.ReadLine());
                }
                catch (Exception e)
                {
                    Console.WriteLine(e.Message);
                    Console.WriteLine();
                    Console.WriteLine();
                    Console.WriteLine();
                    continue;
                }
                switch (choice)
                {
                    case 1:
                        displayOwner();
                        break;

                    case 2:

                        break;

                    case 3:

                        break;

                    case 4:
                        quit();

                        break;

                    default:
                        Console.WriteLine("The option is not available! Please enter another option(1 to 4):");
                        Console.WriteLine();
                        Console.WriteLine();
                        Console.WriteLine();

                        break;
                }

            } while (choice > 4 || choice < 1);
        }
      static   void displayOwner()
        {
            do
            {

                displayOwnerMenu();
                displayOwnerHint();
                try
                {
                    choice = Convert.ToInt32(Console.ReadLine());
                }
                catch (Exception e)
                {
                    Console.WriteLine(e.Message);
                    Console.WriteLine();
                    Console.WriteLine();
                    Console.WriteLine();
                    continue;
                }
                switch (choice)
                {
                    case 1:

                        break;

                    case 2:

                        break;

                    case 3:

                        break;

                    case 4:
                        displayMainMenu();             
                       
                        break;
                    case 5:
                        quit();
                        break;
                    default:
                        Console.WriteLine("The option is not available! Please enter another option(1 to 5):");
                        Console.WriteLine();
                        Console.WriteLine();
                        Console.WriteLine();

                        break;
                }

            } while (choice > 4 || choice < 1);
        }



        static void displayOwnerMenu()
        {
            Console.WriteLine("Welcome to Marvellous Magic");
            Console.WriteLine("=================================");
            Console.WriteLine("\t\t 1. Display All Stock Requests");
            Console.WriteLine("\t\t 2. Display Stock Requests(True/False)");
            Console.WriteLine("\t\t 3. Display All Product Lines");
            Console.WriteLine("\t\t 4. Return to Main Menu");
            Console.WriteLine("\t\t 5. Exit");
        }

        static void displayOwnerHint()
        {

            Console.WriteLine("Enter an option:");
            Console.WriteLine("(where the user enters a number from 1 to 5, to select an option)");
        }



        static void displayMenue()
        {
            Console.WriteLine("Welcome to Marvellous Magic");
            Console.WriteLine("=================================");
            Console.WriteLine("\t\t 1. Owner");
            Console.WriteLine("\t\t 2. Franchise Owner");
            Console.WriteLine("\t\t 3. Customer");
            Console.WriteLine("\t\t 4. Quit");
        }

        static void displayHint()
        {

            Console.WriteLine("Enter an option:");
            Console.WriteLine("(where the user enters a number from 1 to 4, to select an option)");
        }

        static void quit()
        {
            Environment.Exit(0);
        }
    }
}
