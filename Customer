using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Assignment1
{
    class Customer : Menu
    {
       
        public Customer() 
        {  
           displayTitle("Customer");
            menuItem.Add("Display Products");
            menuItem.Add("Display Workshops");
            menuItem.Add("Return To Main Menu");
            menuItem.Add("EXIT");
            displayList();
            displayHint();
        }


        bool validingInput()
        {
            int option;


            option = getInput(Console.ReadLine());
            if (option != -1)
            {

                switch (option)
                {
                    case 1:
                       
                        
                        break;

                    case 2:

                        break;

                    case 3:
                        new MainMenu();
                        break;

                    case 4:
                        quit();
                        break;

                    default:
                        Console.WriteLine("The option is not available! Please enter another option(1 to {0}):", menuItem.Count);
                        Console.WriteLine();
                        Console.WriteLine();
                        Console.WriteLine();
                        return false;
                        break;
                }
                return true;
            }
            else
            {
                Console.WriteLine("Please enter correct value!");
                return false;
            }



        }
