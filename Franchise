        bool validingInput()
        {
            int option;


            option = getInput(Console.ReadLine());
            if (option != -1)
            {

                switch (option)
                {
                    case 1:
                       
                       
                        break;

                    case 2:

                        break;

                    case 3:

                       
                        break;

                    case 4:
                       MainMenu menu =  new MainMenu();
                        menu.runMainMenu();
                        break;
                    case 5:
                        quit();
                        break;
                    default:
                        Console.WriteLine("The option is not available! Please enter another option(1 to {0}):", menuItem.Count);
                        Console.WriteLine();
                        Console.WriteLine();
                        Console.WriteLine();
                        return false;
                        break;
                }
                return true;
            }
            else
            {
                Console.WriteLine("Please enter correct value!");
                return false;
            }



        }
        public void runFranchiseMenu()
        {
            bool input;
            while (true)
            {

                input = validingInput();
                if (!input)
                {
                    new Franchise();
                }
            }
        }
        void quit()
        {
            Environment.Exit(0);
        }
    }
}
